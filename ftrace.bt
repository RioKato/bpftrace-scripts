#!/usr/bin/bpftrace --unsafe

uprobe:$1:* {
  $GREEN = "\033[32m";
  $END = "\033[0m";

  printf("%s> %s(0x%lx, 0x%lx, 0x%lx, 0x%lx, 0x%lx, 0x%lx)%s\n",
    $GREEN, func, arg0, arg1, arg2, arg3, arg4, arg5, $END);
}

uretprobe:$1:* {
  $PURPLE = "\033[35m";
  $END = "\033[0m";

  printf("%s< 0x%lx%s\n",
    $PURPLE, retval, $END);
}


